<!-- Hero Section -->
<section class="max-w-4xl mx-auto px-4 py-16 sm:py-24">
    <div class="space-y-6 text-center">
        <h1 class="text-4xl font-bold text-gray-900">Hi, I am Raddy.</h1>
        <p class="text-xl text-gray-600">Web developer and content creator.</p>
        
        <!-- Featured Image -->
        <div class="mt-12 rounded-lg overflow-hidden shadow-lg bg-gray-900 mx-auto max-w-3xl">
            <img 
                src="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?q=80&w=2070"
                alt="Silhouette of person looking through window at horizon" 
                class="w-full h-[400px] object-cover opacity-90"
            >
        </div>
    </div>
</section>

<!-- Latest Posts Section -->
<section class="max-w-4xl mx-auto px-4 pb-16">
    <div class="space-y-8">
        <h2 class="text-2xl font-bold text-gray-900 text-center">Latest Posts</h2>
        
        <!-- Posts List -->
        <div class="space-y-6 max-w-2xl mx-auto">
            <% if (locals.posts && locals.posts.length > 0) { %>
                <% locals.posts.forEach(post => { %>
                    <article class="group text-center">
                        <a href="/post/<%= post._id %>" class="block space-y-2">
                            <h3 class="text-lg font-medium text-gray-900 group-hover:text-gray-600 transition-colors">
                                <%= post.title %>
                            </h3>
                            <time class="text-sm text-gray-500 block">
                                <%= new Date(post.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </time>
                        </a>
                    </article>
                <% }) %>
            <% } else { %>
                <p class="text-gray-600 text-center">No posts yet.</p>
            <% } %>
        </div>

        <!-- View More Link -->
        <% if (hasNextPage) { %>
        <div class="pt-4 text-center">
            <a href="/?page=<%= nextPage %>" class="text-gray-600 hover:text-gray-900 transition-colors inline-block">‚Üê View Older Posts</a>
        </div>
        <% } %>
    </div>
</section>

