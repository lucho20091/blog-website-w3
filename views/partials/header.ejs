<header class="bg-white shadow-md">
    <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-gray-800">
                    BlogSite
                </a>
            </div>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/', currentRoute) %>">Home</a>
                <a href="/about" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/about', currentRoute) %>">About</a>
                <a href="/contact" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/contact', currentRoute) %>">Contact</a>
            </div>

            <!-- Search Bar -->
            <div class="hidden md:flex items-center">
                <form action="/search" method="POST" class="flex items-center">
                    <input 
                        type="text" 
                        name="searchTerm" 
                        placeholder="Search..." 
                        class="px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                    <button 
                        type="submit" 
                        class="px-4 py-2 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        Search
                    </button>
                </form>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button class="text-gray-600 hover:text-gray-900 focus:outline-none">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div class="md:hidden hidden mt-4">
            <div class="flex flex-col space-y-4">
                <a href="/" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/', currentRoute) %>">Home</a>
                <a href="/about" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/about', currentRoute) %>">About</a>
                <a href="/contact" class="text-gray-600 hover:text-gray-900 <%= isActiveRoute('/contact', currentRoute) %>">Contact</a>
                <form action="/search" method="POST" class="flex items-center">
                    <input 
                        type="text" 
                        name="searchTerm" 
                        placeholder="Search..." 
                        class="w-full px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                    <button 
                        type="submit" 
                        class="px-4 py-2 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                        Search
                    </button>
                </form>
            </div>
        </div>
    </nav>
</header>