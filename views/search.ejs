<!-- Latest Posts Section -->
<section class="max-w-4xl mx-auto px-4 pb-16 mt-8">
    <div class="space-y-8">
        <h2 class="text-2xl font-bold text-gray-900 text-center">Search Results</h2>
        
        <!-- Posts List -->
        <div class="space-y-6 max-w-2xl mx-auto">
            <% if (posts && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <article class="group text-center">
                        <a href="/post/<%= post._id %>" class="block space-y-2">
                            <h3 class="text-lg font-medium text-gray-900 group-hover:text-gray-600 transition-colors">
                                <%= post.title %>
                            </h3>
                            <time class="text-sm text-gray-500 block">
                                <%= new Date(post.createdAt).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </time>
                            <p class="text-gray-600 text-center"><%= post.body.substring(0, 100) %>...</p>
                        </a>
                    </article>
                <% }) %>
            <% } else { %>
                <p class="text-gray-600 text-center">No posts found.</p>
            <% } %>
        </div>
    </div>
</section>